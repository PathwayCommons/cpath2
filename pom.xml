	<distributionManagement>
		<site>
			<!-- Do mvn site site:stage -DstagingDirectory=/tmp/path first,
			 then manually add/push to the gh-pages branch on GitHub)-->
			<id>github</id>
			<name>PathwayCommons/cpath2 GitHub Pages</name>
			<url>http://pathwaycommons.github.io/cpath2/${project.version}</url>
		</site>
        <repository>
            <id>ossrh</id>
            <name>Nexus Release Repository</name>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
        <snapshotRepository>
            <id>ossrh</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </snapshotRepository>
	</distributionManagement>

	<profiles>
		<profile>
			<!-- A profile to deploy to a local directory (then push/rsync manually) -->
			<id>local-deploy</id>
			<distributionManagement>
				<snapshotRepository>
					<id>biopax.snapshots</id>
					<name>BioPAX Snapshots Repository</name>
					<url>${biopax.snapshot.url}</url>
				</snapshotRepository>
				<repository>
					<id>biopax.releases</id>
					<name>BioPAX Releases Repository</name>
					<url>${biopax.release.url}</url>
				</repository>
			</distributionManagement>
		</profile>
        <profile>
            <id>sonatype-release-profile</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.sonatype.plugins</groupId>
                        <artifactId>nexus-staging-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <serverId>ossrh</serverId>
                            <nexusUrl>https://oss.sonatype.org/</nexusUrl>
<!--                             <autoReleaseAfterClose>true</autoReleaseAfterClose> -->
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-source-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>		
	</profiles>

